<div class='form-header'>
  <h1 class='form-header-text'>
    Create Account
  </h1>
</div>

<%= form_with model: @user, url: user_registration_path, method: :POST, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <label class="form-text">Nickname</label>
    <%= f.text_field :nickname, autofocus: true, maxlength:"40",placeholder:"ニックネーム" %>
  </div>


  <div class="form-group">
    <label class="form-text">E-mail</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="form-group">
    <label class="form-text">Password</label>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <label class="form-text">Password Confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワードの確認" %>
  </div>

  <div class="form-group">
    <label class="form-text">Birth of Date</label>
    <%= f.date_select :birth_date, start_year: 1910, end_year: (Time.now.year - 10) %>
  </div>

  <div class="form-group">
    <label class="form-text">Age</label>
    <%= f.text_field :age, autofocus: true,placeholder:"年齢" %>
  </div>

  <div class="form-group-gender">
    <%= f.label :gender %>
    <% ["man", "woman"].each do |gender| %>
      <%= f.check_box :gender, {multiple: true}, gender, nil %>
      <%= gender %>
    <% end %>
  </div>

  <div class="register-btn">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/second-footer" %>
